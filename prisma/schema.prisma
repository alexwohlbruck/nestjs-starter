generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Name {
  first String
  last  String
}

enum Role {
  SUPERUSER
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  name          Name
  email         String  @unique
  password      String
  emailVerified Boolean @default(false)
  roles         Role[]
  // posts    Post[]
}

enum VerificationCodeType {
  EMAIL
  PHONE
  PASSWORD_RESET
}

model VerificationCode {
  id     String               @id @default(auto()) @map("_id") @db.ObjectId
  userId String               @db.ObjectId
  code   String               @unique
  type   VerificationCodeType
  // TODO: Expiry date
}

